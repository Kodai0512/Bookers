<h1>投稿一覧</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td> <%= link_to "Show", book_path(book.id)%></td>
        <td>  <%= link_to "Edit",edit_book_path(book.id) %></td>
        <td> <%= link_to "Destroy", book_path(book.id), method: :delete%></td>
      </tr>
  <% end %> 
  </tbody>
</table>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<h1>新規投稿</h1>
<!-- form_with部分 -->
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
	
  <h4>本文</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>