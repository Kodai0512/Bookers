 <h1>編集画面</h1>
<%= form_with model: @book do |f| %>
 
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  
  <h4>本文</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Update Book' %>
 
<% end %>
 <% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<td>  <%= link_to "Show",book_path(@book.id) %></td>
<td>  <%= link_to "Back",books_path %></td>

